<%- include("../partials/header.ejs") %>



<div class = "container">
	<header class ="jumbotron">
		<div class = "container">
			<h1>
			All Camp Grounds
		</h1>
		<p>
			World famous campgrounds
		</p>
		<p>
			<a class = "btn btn-primary btn-lg" href= "/campgrounds/new" >Add New Campsite </a>
		</p>
		</div>
		
	</header>
	
	
	<div class = "row text-center">
		<% campgrounds.forEach(function(campground){ %>
	
			<div class= "col-md-3 col-sm-6">
			
				<div class="card" style="width: 18rem;">
				  <img src="<%= campground.image %>" class="card-img-top" style="height: 10rem;">
				  <div class="card-body">
					<h5 class="card-title"> <%=campground.name %> </h5>
					<a href="/campgrounds/<%= campground.id %>" class="btn btn-primary">More Info</a>
				  </div> 
				</div>

			</div>
		<% }); %>
	</div>
	
</div>
<%- include("../partials/footer.ejs") %>
